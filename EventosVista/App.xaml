<Application x:Class="EventosVista.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:EventosVista"
             xmlns:viewModel="clr-namespace:EventosVista.MVVM.ViewModel"
             xmlns:view="clr-namespace:EventosVista.MVVM.View"
             StartupUri="./MVVM/View/MainWindow.xaml">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="./Theme/ThemeName.ListViewTheme.xaml"/>
                <ResourceDictionary Source="./Theme/MenuButtonTheme.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate DataType="{x:Type viewModel:EventViewModel}">
                <view:HomeView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:PostEventViewModel}">
                <view:PostEventView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:LogInViewModel}">
                <view:LogInView/>
            </DataTemplate>
            <DataTemplate DataType="{x:Type viewModel:RegisterViewModel}">
                <view:RegisterView/>
            </DataTemplate>
        </ResourceDictionary>
    </Application.Resources>
</Application>
